@{
    ViewData["Title"] = "Categories Page";
}

@model Category

<div class="jumbotron">
    <h1 class="display-4 text-center">Categories | <a href="/">Products</a></h1>

    <div class="card col-sm-6">
        <legend>New Category:</legend>
        <form action="/addcategory" method="post">
            <div class="form-group">
                <label asp-for="CategoryName">Category Name:</label>
                <input asp-for="CategoryName" class="form-control">
                <span class="text-danger" asp-validation-for="CategoryName"></span>
            </div>
            <input type="submit" value="Add Category" class="btn btn-info">
        </form>
    </div>

    <div class="col-sm-3">
        <legend>Existing Products:</legend>
        <table class="table table-striped">
            <tr>
                <th>Product</th>
            </tr>
            @foreach(var c in ViewBag.Category)
            {
                <tr>
                    <td><a href="/categories/@c.CategoryId">@c.CategoryName</a></td>
                </tr>
            }
        </table>
    </div>
    
</div>